---
import { Image } from 'astro:assets';

const { project, index } = Astro.props;
---

<li
  class="group cursor-pointer project-card animate-on-scroll flex"
  style={`transition-delay: ${index * 150}ms;`}
  onclick={`this.dispatchEvent(new CustomEvent('open-modal', {detail: {id: ${project.id}}, bubbles: true}));`}
>
  <article
    class="relative overflow-hidden rounded-2xl bg-white/40 backdrop-blur-xl border border-white/30 hover:border-indigo-200 transition-all duration-500 shadow-lg hover:shadow-xl w-full flex flex-col"
  >
    <!-- Imagen con overlay -->
    <div class="aspect-[4/3] overflow-hidden relative">
      <Image
        src={project.thumb || project.poster}
        alt={`Vista previa de ${project.title}`}
        width={400}
        height={300}
        loading="lazy"
        class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
      />
      <div
        class="absolute inset-0 bg-gradient-to-t from-black/50 via-black/20 to-transparent flex items-end justify-start p-4 opacity-0 group-hover:opacity-100 transition-opacity duration-500"
      >
        <span
          class="text-white text-xs bg-indigo-600/80 px-3 py-1 rounded-full font-sora"
          >Ver Detalles</span
        >
      </div>
    </div>

    <!-- Texto -->
    <div class="p-4 flex flex-col flex-grow">
      <span
        class="font-sora text-xs px-2 py-1 rounded-full bg-indigo-100 text-indigo-600 border border-indigo-200 self-start"
      >
        {project.event_type}
      </span>
      <h3
        class="font-sora font-semibold text-lg text-gray-900 mt-2 group-hover:text-indigo-600 transition-colors duration-300"
      >
        {project.title}
      </h3>
      <p class="font-sora text-sm text-gray-600 mt-2 flex-grow line-clamp-3">
        {project.description}
      </p>

      <!-- CTA pequeño -->
      <div class="mt-3 flex items-center justify-between">
        <span
          class="text-indigo-600 text-sm font-semibold group-hover:underline"
          >Explorar →</span
        >
      </div>
    </div>
  </article>
</li>
