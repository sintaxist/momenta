---
// Obtenemos el año actual en el servidor
const currentYear = new Date().getFullYear();

// Definimos los iconos como SVG para usarlos directamente
const icons = {
    Instagram: `<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-instagram"><rect width="20" height="20" x="2" y="2" rx="5" ry="5"/><path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"/><line x1="17.5" x2="17.51" y1="6.5" y2="6.5"/></svg>`,
    Linkedin: `<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-linkedin"><path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"/><rect width="4" height="12" x="2" y="9"/><circle cx="4" cy="4" r="2"/></svg>`,
    Github: `<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-github"><path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"/><path d="M9 18c-4.51 2-5-2-7-2"/></svg>`,
    Mail: `<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-mail"><rect width="20" height="16" x="2" y="4" rx="2"/><path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/></svg>`,
    Heart: `<svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="currentColor" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-heart"><path d="M19 14c1.49-1.46 3-3.21 3-5.5A5.5 5.5 0 0 0 16.5 3c-1.76 0-3 .5-4.5 2-1.5-1.5-2.74-2-4.5-2A5.5 5.5 0 0 0 2 8.5c0 2.3 1.5 4.05 3 5.5l7 7Z"/></svg>`,
};

const socialLinks = [
    { icon: icons.Instagram, href: '#', label: 'Instagram' },
    { icon: icons.Linkedin, href: '#', label: 'LinkedIn' },
    { icon: icons.Github, href: 'https://github.com/alejandrocanek', label: 'GitHub' },
    { icon: icons.Mail, href: 'mailto:hola@alejandrocanek.com', label: 'Email' }
];

const services = [
    'Invitaciones Digitales',
    'Gestión de Eventos',
    'Plataformas Interactivas',
    'Analytics y Reportes',
    'Consultoría Digital'
];
---
<footer class="py-16 px-6 border-t border-gray-200 relative bg-white/30 backdrop-blur-xl">
    <div class="max-w-7xl mx-auto">
        <div class="grid md:grid-cols-3 gap-8 mb-12">
            <div transition:animate="fade slide-in-from-bottom">
                <h3 class="font-sora font-bold text-2xl text-gray-900 mb-4">
                    ALEJANDRO CANEK
                </h3>
                <p class="font-sora text-gray-600 leading-relaxed max-w-sm">
                    Transformando momentos especiales en experiencias digitales extraordinarias. Cada evento es una oportunidad para crear algo memorable.
                </p>
            </div>

            <div transition:animate="fade slide-in-from-bottom" style="transition-delay: 100ms;">
                <h4 class="font-sora font-semibold text-lg text-gray-900 mb-4">Servicios</h4>
                <ul class="space-y-2">
                    {services.map(service => (
                        <li class="font-sora text-gray-500 hover:text-gray-700 transition-all duration-300 hover:translate-x-1 cursor-pointer">
                            {service}
                        </li>
                    ))}
                </ul>
            </div>

            <div transition:animate="fade slide-in-from-bottom" style="transition-delay: 200ms;">
                <h4 class="font-sora font-semibold text-lg text-gray-900 mb-4">Conecta Conmigo</h4>
                <div class="flex space-x-4 mb-6">
                    {socialLinks.map(social => (
                        <a 
                            href={social.href}
                            target={social.href.startsWith('http') ? '_blank' : undefined}
                            rel={social.href.startsWith('http') ? 'noopener noreferrer' : undefined}
                            aria-label={social.label}
                            class="p-3 rounded-xl bg-white/50 backdrop-blur-sm hover:bg-indigo-100 text-gray-600 hover:text-indigo-600 transition-all duration-300 border border-gray-200 hover:scale-110 hover:rotate-6"
                        >
                            <Fragment set:html={social.icon} />
                        </a>
                    ))}
                </div>
                <div class="space-y-2 text-sm font-sora">
                    <p class="text-gray-500">hola@alejandrocanek.com</p>
                    <p class="text-gray-500">+52 (55) 1234-5678</p>
                    <p class="text-gray-500">Ciudad de México, México</p>
                </div>
            </div>
        </div>

        <div class="pt-8 border-t border-gray-200 flex flex-col md:flex-row items-center justify-between space-y-4 md:space-y-0" transition:animate="fade" style="transition-delay: 300ms;">
            <p class="font-sora text-gray-500 text-sm flex items-center">
                © {currentYear} Alejandro Canek. Hecho con 
                <span class="mx-1.5 text-red-500 animate-pulse-heart">
                    <Fragment set:html={icons.Heart} />
                </span>
                 para eventos extraordinarios.
            </p>
            <div class="flex space-x-6 text-sm font-sora">
                <a href="#" class="text-gray-500 hover:text-gray-700 transition-all duration-300 hover:-translate-y-0.5">Privacidad</a>
                <a href="#" class="text-gray-500 hover:text-gray-700 transition-all duration-300 hover:-translate-y-0.5">Términos</a>
            </div>
        </div>
    </div>
</footer>

<style>
  @keyframes pulse-heart {
    0%, 100% {
      transform: scale(1);
    }
    50% {
      transform: scale(1.25);
    }
  }
  .animate-pulse-heart {
    animation: pulse-heart 1.5s ease-in-out infinite;
  }
</style>