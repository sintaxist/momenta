---
import "../styles/global.css";
import Footer from "@/components/Footer.astro";
import Header from "@/components/Header.astro";

interface Props {
  title: string;
  description: string;
  noNavgation: boolean;
}

const { title, description = "Invitaciones Digitales para Eventos Inolvidables.", noNavgation } = Astro.props;
